{
  "name": "hasura-guessing-game",
  "version": "1.0.0",
  "description": "minimal multiplayer guessing game webapp, the purpose of which is to demonstrate hasura, graphql, and other cool things",
  "main": "index.js",
  "private": "true",
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/micro-dev"]
  },
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "concurrently -p \"{command}--{time}\" -t \"mm:ss\" \"npm:dev:start*\"",
    "dev:start:client-frontend": "cd packages/client-frontend && npm run serve",
    "dev:start:create-temp-user": "cd packages/create-temp-user && npm run dev:start",
    "dev:start:send-game-event": "cd packages/send-game-event && npm run dev:start",
    "dev:start:hasura": "cd hasura && docker-compose up -d",
    "open:hasura-console": "cd hasura && npx hasura console",
    "check-migrations-dev": "cd hasura && hasura migrate status",
    "publish": "lerna publish --contents dist",
    "clean": "lerna clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OriginalYellow/hasura-guessing-game.git"
  },
  "author": "Michael Joseph",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OriginalYellow/hasura-guessing-game/issues"
  },
  "homepage": "https://github.com/OriginalYellow/hasura-guessing-game#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "hasura-cli": "^1.2.2",
    "lerna": "^3.22.1"
  }
}